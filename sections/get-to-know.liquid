.get-to-know {
    position: relative;
    padding-top: 3.75vw;
    padding-bottom: 8vw;
    background-color: #ea7a64;
}
.get-to-know:after {
    content: "";
    position: absolute;
    bottom: 3.12vw;
    right: 0;
    width: 13vw;
    height: 14vw;
    background-image: url(https://cdn.shopify.com/s/files/1/0036/1820/9901/files/get-to-know-bg.png);
    background-size: cover;
    z-index: 10;
}
.get-to-know h2,
.get-to-know h3 {
    color: #fff;
    text-align: center;
}
.get-to-know .videos {
    position: relative;
    margin-top: 2.4vw;
    padding-top: 2vw;
}
.get-to-know iframe,
.get-to-know video {
    width: 100%;
    height: 100%;
}
.get-to-know .video-screen {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
}
.get-to-know .video-screen img {
    height: 100%;
}
.get-to-know .video-view {
    display: none;
    position: absolute;
    z-index: -1;
    top: 0;
    right: 0;
    width: 58.1vw;
    height: 28.4vw;
    border: 2px solid #fff;
}
.get-to-know .video.active .video-view {
    display: block;
    opacity: 1;
    z-index: 50;
}
.get-to-know .play-btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8.6vw;
    height: 8.6vw;
    padding-left: 3.12vw;
    padding-top: 1.7vw;
    box-sizing: border-box;
    font-family: simple-line-icons;
    font-size: 3vw;
    color: #fff;
    border: 2px solid #fff;
    border-radius: 100%;
    cursor: pointer;
    z-index: 20;
}
.get-to-know .video-title {
    width: 24vw;
    font-size: 1.5vw;
    font-weight: 800;
    margin-bottom: 2vw;
    cursor: pointer;
}
.get-to-know .video .video-title {
    display: flex;
    align-items: center;
    white-space: nowrap;
    justify-content: space-between;
    transition: 0.3s ease;
}
.get-to-know .video.active {
    color: #fff;
}
.get-to-know .video .video-title:after {
    content: "";
    width: 0;
    height: 2px;
    background-color: #fff;
    margin-left: 1vw;
    transition: 0.3s ease;
}
.get-to-know .video.active .video-title:after {
    content: "";
    width: 100%;
    height: 2px;
    width: 100%;
    background-color: #fff;
    margin-left: 1vw;
}
.get-to-know .video-view .btn {
    position: absolute;
    left: 50%;
    transform: translate(-50%, 100%);
    bottom: -2vw;
    border: 1px solid #fff;
    display: flex;
    align-items: center;
}
.get-to-know .video .video-view.featured {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: none;
}
.get-to-know .video .video-view.featured .featured-link {
    position: relative;
    display: block;
    width: 48.5%;
    border: 2px solid #fff;
    height: 28.4vw;
}
.get-to-know .video .video-view.featured .featured-link img {
    height: 28.4vw;
}
.get-to-know .video .video-view.featured .featured-link:after {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: 0.2s;
    z-index: 5;
}
.get-to-know .video .video-view.featured .featured-link:before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8.12vw;
    height: 2.22vw;
    background-image: url(https://cdn.shopify.com/s/files/1/0036/1820/9901/files/white-arrow.png?v=1598679985);
    background-size: cover;
    opacity: 0;
    transition: 0.2s;
    z-index: 10;
}
.get-to-know .video .video-view.featured .featured-link:hover:after {
    opacity: 1;
}
.get-to-know .video .video-view.featured .featured-link:hover:before {
    opacity: 1;
}
