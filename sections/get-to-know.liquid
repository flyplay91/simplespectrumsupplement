<script type="text/javascript">
  $(document).ready(function() {
    $(".img-carousel").slick({
      arrows: false,
      dots : true,
      slidesToShow: 2,
  	  slidesToScroll: 2
    });

   $('.get-to-know .video-screen').css('display','block');
	$('.get-to-know .video-title').click(function() {
		let parent = $(this).closest('.video');
		parent.siblings().removeClass('active');
		parent.addClass('active');
		parent.find('')
	});

    $('.get-to-know .play-btn').click(function() {
      $(this).siblings('.video-screen').remove();
      if ($(this).siblings('video').length) {
        $(this).siblings('video').get(0).play();
      }
      $(this).remove();
    });
    $('.mobOnly.videos').slick({
      arrows: false,
      dots : true
    });
    $('.video-title').click(function(){
      $('.video-view video').each(function() {
        $(this).get(0).pause();
      });
    })
    $('.mobOnly.videos').on('beforeChange', function(event, slick, currentSlide, nextSlide){
      $('video').trigger('pause');

    });

    
  });

</script>
