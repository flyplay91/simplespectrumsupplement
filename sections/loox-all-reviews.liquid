{%- include 'LS_83195002989_global' -%}
<div
	id="looxReviews"
	data-limit="{% capture LS_locales_settings_key %}{{ section.id }}.data-limit{% endcapture %}{% include 'LS_83195002989_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_83195002989_settings_value == blank %}{{section.settings.data-limit}}{% else %}{{ LS_83195002989_settings_value  }}{% endif %}"
	{% capture LS_locales_settings_key %}{{ section.id }}.aggregated{% endcapture %}{% include 'LS_83195002989_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.aggregated   %}data-loox-aggregate{% endif %}
	{% capture LS_locales_settings_key %}{{ section.id }}.only_photos{% endcapture %}{% include 'LS_83195002989_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.only_photos   %}data-mode="img"{% endif %}
	{% capture LS_locales_settings_key %}{{ section.id }}.product_handle{% endcapture %}{% include 'LS_83195002989_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.product_handle   %}data-product-id="{{ all_products[section.settings.product_handle].id }}"{% endif %}
	{% capture LS_locales_settings_key %}{{ section.id }}.hide_thumbnails{% endcapture %}{% include 'LS_83195002989_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.hide_thumbnails   %}data-product-thumbnails="false"{% endif %}
	style="margin:0 auto;max-width:{% capture LS_locales_settings_key %}{{ section.id }}.maxwidth{% endcapture %}{% include 'LS_83195002989_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_83195002989_settings_value == blank %}{{section.settings.maxwidth}}{% else %}{{ LS_83195002989_settings_value  }}{% endif %}px;"
></div>
{% schema %}
{
	"name": "All reviews - Grid",
	"class": "index-section",
	"settings": [
		{
			"id": "only_photos",
			"type": "checkbox",
			"label": "Display only reviews with photos",
			"default": false
		},
		{
			"id": "hide_thumbnails",
			"type": "checkbox",
			"label": "Hide product thumbnails",
			"default": false
		},
		{
			"type": "product",
			"id": "product_handle",
			"label": "Add \"Write a review\" button linked to:"
		},
		{
			"type": "checkbox",
			"id": "aggregated",
			"label": "Show reviews from all products",
			"default": true
		},
		{
			"type": "range",
			"id": "data-limit",
			"min": 1,
			"max": 40,
			"step": 1,
			"label": "Number of reviews to display",
			"default": 20
		},
		{
			"type": "range",
			"id": "maxwidth",
			"min": 480,
			"max": 1920,
			"step": 40,
			"unit": "px",
			"label": "Maximum width",
			"default": 1080
		}
	],
	"presets": [{
		"name": "All reviews - Grid",
		"category": "Loox"
	}]
}
{% endschema %}